<document xmlns="http://maven.apache.org/changes/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
    <properties>
        <title>Piranha Cloud</title>
    </properties>
    <body>
        <release version="20.5.0" date="PENDING" description="May 2020 release - the Recovery edition">
 
            <action dev="manorrock" type="add">
                Added JMX monitoring support (on by default for Piranha Server).
            </action>
            <action dev="manorrock" type="add">
                Added file upload support.
            </action>
            <action dev="manorrock" type="add">
                Added ServletContext.TEMPDIR support.
            </action>
            <action dev="manorrock" type="add">
                Added Undertow support.
            </action>
            <action dev="manorrock" type="add">
                Added @WebServlet support
            </action>
            <action dev="manorrock" type="add">
                Add SSL support (to default HTTP implementation module)
            </action>           
            <action dev="manorrock" type="update">
                Updated minimum Java version to Java 10.
            </action>
        </release>
        <release version="20.4.0" date="2020-04-13" description="April 2020 release - the Quarantine edition">
            <action dev="manorrock" type="add" due-to="otaviojava">
                Added --port to override port in Piranha Micro.
            </action>
            <action dev="manorrock" type="add">
                Added annotation scanning, web.xml, Pages and ServletContainerInitializer support to Piranha Micro.
            </action>
            <action dev="manorrock" type="add">
                Added setting of default port to Piranha Micro.
            </action>
            <action dev="manorrock" type="add">
                Merged Manorrock Herring into project
            </action>
            <action dev="manorrock" type="add">
                Merged Manorrock Sardine into project.
            </action>
            <action dev="manorrock" type="update">
                Updated minimum Java version to Java 9.
            </action>
        </release>
        <release version="20.3.0" date="2020-03-19" description="March 2020 release - the COVID-19 edition">
            <action dev="manorrock" type="add">
                Added ServletContainerInitializerExtension.
            </action>
            <action dev="manorrock" type="update">
                Moved documentation into JavaDoc.
            </action>
        </release>
        <release version="20.2.0" date="2020-02-13" description="February 2020 release">
            <action dev="manorrock" type="add" due-to="jbee">
                Added WebApplicationExtension support.
            </action>
            <action dev="manorrock" type="add">
                Added filter and filter-mapping support
            </action>
        </release>
        <release version="20.1.2" date="2020-01-14" description="January 2020 release - patch 2">
            <action dev="manorrock" type="add">
                Added Maven Central deployment - all our bits are now on Maven Central.
            </action>
        </release>
        <release version="20.1.0" date="2020-01-13" description="January 2020 release">
            <action dev="manorrock" type="add">
                Added Docker image for Piranha Server.
            </action>
            <action dev="manorrock" type="add">
                Added ARM32v6 SNAPSHOT Docker image for Piranha Server.
            </action>
            <action dev="atijms" type="add">
                Added Exousia support.
            </action>
            <action dev="atijms" type="add">
                Added Arquillian connector.
            </action>
            <action dev="manorrock" type="add">
                Created JavaDoc website at https://javadoc.piranha.cloud/.
            </action>
        </release>
        <release version="19.12.0" date="2019-12-13" description="Our first piranha.cloud release">
            <action dev="manorrock" type="add">
                Added Piranha Nano - the smallest runtime in our lineup.
            </action>
            <action dev="manorrock" type="add">
                Added Piranha Embedded - our embedded runtime for use in your own applications.
            </action>
        </release>
