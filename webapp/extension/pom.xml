<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>cloud.piranha.webapp</groupId>
        <artifactId>project</artifactId>
        <version>20.5.0-SNAPSHOT</version>
    </parent>
    <artifactId>piranha-webapp-extension</artifactId>
    <packaging>jar</packaging>
    <name>Piranha Webapplication - Extension</name>
    <description>
        This module delivers the default implementation of a 
        WebApplicationExtension. It is used by both Piranha Micro and Piranha
        Server to deliver the basic functionality a Servlet container is supposed
        to support.
    </description>
    <dependencies>
        <!-- Apache FileUpload support -->
        <dependency>
            <groupId>cloud.piranha.upload</groupId>
            <artifactId>piranha-upload-apache</artifactId>
            <version>${project.version}</version>
            <scope>runtime</scope>
        </dependency>
        <!-- Annotation Scanning support -->
        <dependency>
            <groupId>cloud.piranha.webapp</groupId>
            <artifactId>piranha-webapp-annotationscan</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
        <!-- Jakarta Pages -->
        <dependency>
            <groupId>org.glassfish.web</groupId>
            <artifactId>jakarta.servlet.jsp</artifactId>
            <scope>runtime</scope>
        </dependency>
        <!-- Jakarta WebSocket -->
        <dependency>
            <groupId>org.glassfish.tyrus</groupId>
            <artifactId>tyrus-container-servlet</artifactId>
            <version>1.16</version>
            <scope>runtime</scope>
        </dependency>
        <!-- Piranha Webapplication API -->
        <dependency>
            <groupId>cloud.piranha.webapp</groupId>
            <artifactId>piranha-webapp-api</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <!-- Piranha Security - OmniFaces Eleos integration -->
        <dependency>
            <groupId>cloud.piranha.security</groupId>
            <artifactId>piranha-security-eleos</artifactId>
            <version>${project.version}</version>
            <scope>runtime</scope>
        </dependency>
        <!-- Piranha Security - OmniFaces Exousia integration -->
        <dependency>
            <groupId>cloud.piranha.security</groupId>
            <artifactId>piranha-security-exousia</artifactId>
            <version>${project.version}</version>
            <scope>runtime</scope>
        </dependency>
        <!-- ServletContainerInitializer support -->
        <dependency>
            <groupId>cloud.piranha.webapp</groupId>
            <artifactId>piranha-webapp-initializer</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
        <!-- TEMPDIR support -->
        <dependency>
            <groupId>cloud.piranha.webapp</groupId>
            <artifactId>piranha-webapp-tempdir</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
        <!-- @WebServlet support -->
        <dependency>
            <groupId>cloud.piranha.webapp</groupId>
            <artifactId>piranha-webapp-webservlet</artifactId>
            <version>${project.version}</version>
            <scope>runtime</scope>
        </dependency>
        <!-- web.xml support -->
        <dependency>
            <groupId>cloud.piranha.webapp</groupId>
            <artifactId>piranha-webapp-webxml</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
        <!-- Jakarta Expression Language -->
        <dependency>
            <groupId>org.glassfish</groupId>
            <artifactId>javax.el</artifactId>
            <version>3.0.1-b11</version>
            <scope>runtime</scope>
        </dependency>
    </dependencies>
</project>
